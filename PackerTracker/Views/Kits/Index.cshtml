@using PackerTracker.Models;

  <h1>Track Your Pack</h1>
  @if (Model.Count == 0)
  {
    <p>Your pack is empty and ready for your next adventure.</p>
  }
  <ul>
    @foreach (Kit kit in Model)
    {
        <li>
            <a href='/kits/@kit.Id'>@kit.Name</a>
        </li>
    }
  </ul>
  <br>
  <a href="/kits/new">Add a new piece to your kit.</a>
  <br>
  <form action="/kits/delete" method="post">
    <button type="submit" name="button">Empty Your Pack</button>
  </form>